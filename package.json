{
  "name": "ghost-workaround-theme",
  "description": "",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "ghost": ">=3.0.0"
  },
  "license": "MIT",
  "scripts": {
    "dev": "gulp",
    "zip": "gulp zip",
    "test": "gscan . --fatal --verbose .",
    "test:ci": "npm run test",
    "pretest": "gulp build"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine"
    ]
  },
  "devDependencies": {
    "@tryghost/release-utils": "0.8.1",
    "autoprefixer": "10.4.19",
    "beeper": "2.1.0",
    "cssnano": "5.1.15",
    "gscan": "4.43.1",
    "gulp": "4.0.2",
    "gulp-concat": "2.6.1",
    "gulp-livereload": "4.0.2",
    "gulp-postcss": "9.0.1",
    "gulp-uglify": "3.0.2",
    "gulp-zip": "5.1.0",
    "inquirer": "8.2.6",
    "postcss": "8.4.39",
    "postcss-color-mod-function": "3.0.3",
    "postcss-easy-import": "4.0.0",
    "pump": "3.0.2"
  },
  "browserslist": [
    "defaults"
  ],
  "config": {
    "posts_per_page": 25,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "profile": {
        "width": 150
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": true,
    "custom": {
      "show_publication_cover": {
        "type": "boolean",
        "default": true,
        "group": "homepage"
      },
      "show_logo_in_navigation": {
        "type": "boolean",
        "default": false,
        "group": "homepage"
      },
      "email_signup_text": {
        "type": "text",
        "default": "Sign up for more like this.",
        "group": "post"
      },
      "show_recent_posts_footer": {
        "type": "boolean",
        "default": true,
        "group": "post"
      }
    }
  }
}
